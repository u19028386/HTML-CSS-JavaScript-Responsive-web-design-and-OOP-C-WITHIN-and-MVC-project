@{
    ViewBag.Title = "TakeAction";
}

<h2>TakeAction</h2>






<form style="text-align:center; border:5px solid lightgrey;">
    <div>
        <h2>LOGIN</h2>
    </div>
    <br />



    <div>
        <h3>Please enter your email and password</h3>
    </div>
    <br />


    <div class="form-outline form-white mb-4">
        <i class="fa fa-user icon fa-5x"></i>
        <input type="text" id="mEmail" class="form-control form-control-lg" name="mUsername" style="display:inline-block;">
    </div>
    <br />
    <br />


    <div class="form-outline form-white mb-4">
        <i class="fa fa-lock icon fa-5x"></i>
        <input type="password" id="mPass" class="form-control form-control-lg" name="mPass" style="display:inline-block;">
    </div>

    <br />



    <input type="submit" value="LOGIN" class="btn btn-primary" style="width:200px;position:center;" />

    <br />

    <br />


</form>
