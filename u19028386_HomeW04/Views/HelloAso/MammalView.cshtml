@model List<u19028386_HomeW04.Models.Mammal>
@{
    ViewBag.Title = "MammalView";
}


<head>
    <style>
        #myT {
            font-family: Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #myT td, #myT th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #myT tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #myT tr:hover {
                background-color: #ddd;
            }

            #myT th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #04AA6D;
                color: white;
            }
    </style>
</head>

<h3>Mammals</h3>

<table id="myT" style="margin-bottom:10%">
    <tr>
        <th>Name</th>
        <th>Country</th>
        <th>Amount</th>
        <th>Maximum Weight/Mass (KG)</th>
        <th>Type</th>
        <th>Critically Endangered</th>
        <th>Survive In Desert</th>
        <th>Info</th>
    </tr>

    @foreach (var mammal in Model)
    {
        <tr>
            <td>@mammal.Name</td>
            <td>@mammal.Country</td>
            <td>@mammal.Amount</td>
            <td>@mammal.MaxWeight</td>
            <td>@mammal.Type</td>
            <td>@mammal.IsEndangered()</td>
            <td>@mammal.FoundInDesert()</td>
            <td>@mammal.getInfo()</td>
        </tr>
    }
</table>


